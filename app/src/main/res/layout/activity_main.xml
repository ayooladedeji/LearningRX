<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.example.ayo.learningrx.MainActivity">

        <AutoCompleteTextView
            android:id="@+id/search_term_1"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/and"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/search_term_1"
            android:id="@+id/and_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:id="@+id/search_term_2"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/search_term_1"
            android:layout_marginTop="14dp"
            android:id="@+id/movie_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

